{
    "enabledManagers": ["npm"],
    "reviewers": ["oleg-semyonov"],
    "major": {
        "dependencyDashboardApproval": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": ["pin"],
            "automerge": true
        },
        {
            "packagePatterns": ["*"],
            "excludePackagePatterns": ["^@prezly", "^@sentry"],
            "enabled": false
        },
        {
            "matchPackageNames": ["@prezly/content-renderer-react-js", "@prezly/story-content-format"],
            "groupName": "Prezly Content Renderer",
        },
        {
            "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
            "groupName": "React",
            "allowedVersions": "<18"
        },
        {
            "matchPackageNames": ["@prezly/eslint-config"],
            "automerge": true
        },
        {
            "matchPackageNames": ["@prezly/theme-kit-nextjs"],
            "matchUpdateTypes": ["patch"],
            "automerge": true
        },
        {
            "matchPackageNames": ["@prezly/themes-intl-messages"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        },
        {
            "matchPackagePatterns": ["^@sentry"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        }
    ]
}
